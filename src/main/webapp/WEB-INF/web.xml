    </servlet-mapping>

    <servlet>
        <servlet-name>teamServlet</servlet-name>
        <servlet-class>com.kosshit.anderse.task2_3.web.TeamServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>teamServlet</servlet-name>
        <url-pattern>/team</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>feedbackServlet</servlet-name>
        <servlet-class>com.kosshit.anderse.task2_3.web.FeedbackServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>feedbackServlet</servlet-name>
        <url-pattern>/feedback</url-pattern>
